<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    
    	<TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Barkod" />

    	<TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:text="Cihaz Seri No" />

    	<TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="220dp"
        android:text="Marka" />

    	<TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="320dp"
        android:text="Model" />

    	<TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="420dp"
        android:text="Özellik" />

    	<TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="520dp"
        android:text="Alt Tipi" />

    	<TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="620dp"
        android:text="Kullanım Şekli" />

    	<TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="720dp"
        android:text="Adres" />
    	
    	<TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="820dp"
        android:text="İstasyon/Durak Adı" />
    	
    	<TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="920dp"
        android:text="Turnike No" />
    	
    	<TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="1020dp"
        android:text="Durum" />
    	
    	<Button
    	android:id="@+id/button1"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentLeft="true"
    	android:layout_alignParentRight="true"
    	android:layout_alignParentTop="true"
    	android:layout_marginTop="1120dp"
    	android:text="Kaydet" />
    	
    	<EditText
    	    android:id="@+id/editText9"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignBaseline="@+id/textView9"
    	    android:layout_alignBottom="@+id/textView9"
    	    android:layout_alignLeft="@+id/spinnerKullanimsekli"
    	    android:ems="10" />
    	
    	<EditText
    	    android:id="@+id/editText11"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignBaseline="@+id/textView11"
    	    android:layout_alignBottom="@+id/textView11"
    	    android:layout_alignLeft="@+id/editText9"
    	    android:ems="10" />
    	
    	<EditText
    	    android:id="@+id/editText13"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignBaseline="@+id/textView13"
    	    android:layout_alignBottom="@+id/textView13"
    	    android:layout_alignLeft="@+id/editText11"
    	    android:ems="10" />

    	<Spinner
    	    android:id="@+id/spinner1"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignBaseline="@+id/textView12"
    	    android:layout_alignBottom="@+id/textView12"
    	    android:layout_alignLeft="@+id/editText13" />

    	<Button
    	    android:id="@+id/btnBarkodOkut"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="105dp"
            android:layout_height="40dp"
    	    android:layout_alignBaseline="@+id/textView2"
    	    android:layout_alignBottom="@+id/textView2"
    	    android:layout_toRightOf="@+id/textView3"
    	    android:ems="10"
    	    android:text="Okut" />
    	
    	<Button
                android:id="@+id/buttonBarkodAra"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="105dp"
                android:layout_height="40dp"
                android:layout_alignBaseline="@+id/btnBarkodOkut"
                android:layout_alignBottom="@+id/btnBarkodOkut"
                android:layout_alignLeft="@+id/buttonTemizle"
                android:layout_alignRight="@+id/editText1"
                android:text="Ara" />

    	<EditText
    	    android:id="@+id/editText1"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignLeft="@+id/btnBarkodOkut"
    	    android:layout_below="@+id/btnBarkodOkut"
    	    android:ems="10"
    	    android:inputType="number" >

    	    <requestFocus />
    	</EditText>

    	<EditText
    	    android:id="@+id/editText3"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignBottom="@+id/textView3"
    	    android:layout_alignLeft="@+id/editText1"
    	    android:ems="10" />

    	<Button
    	    android:id="@+id/buttonTemizle"
    	    style="?android:attr/buttonStyleSmall"
    	    android:layout_width="105dp"
    	    android:layout_height="40dp"
    	    android:layout_alignBaseline="@+id/buttonAra"
    	    android:layout_alignBottom="@+id/buttonAra"
    	    android:layout_alignRight="@+id/editText3"
    	    android:text="Temizle" />

    	<Button
    	    android:id="@+id/buttonAra"
    	    style="?android:attr/buttonStyleSmall"
    	    android:layout_width="105dp"
    	    android:layout_height="40dp"
    	    android:layout_alignRight="@+id/btnBarkodOkut"
    	    android:layout_below="@+id/editText3"
    	    android:layout_toRightOf="@+id/textView3"
    	    android:text="Ara" />
    	
    	<Spinner
    	    android:id="@+id/spinnerOzellik"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignRight="@+id/spinnerMarka"
    	    android:layout_alignTop="@+id/textView6"
    	    android:layout_toRightOf="@+id/textView3"
    	    android:ems="10" />
    	
    	<Spinner
    	    android:id="@+id/spinnerAlttipi"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignTop="@+id/textView7"
    	    android:layout_toRightOf="@+id/textView3"
    	    android:ems="10" />

    	<Spinner
    	    android:id="@+id/spinnerKullanimsekli"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignTop="@+id/textView8"
    	    android:layout_toRightOf="@+id/textView3"
    	    android:ems="10" />

    	<Spinner
    	    android:id="@+id/spinnerMarka"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignRight="@+id/buttonAra"
    	    android:layout_alignTop="@+id/textView4"
    	    android:layout_toRightOf="@+id/textView3" />

    	<Spinner
    	    android:id="@+id/spinnerModel"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignRight="@+id/spinnerOzellik"
    	    android:layout_alignTop="@+id/textView5"
    	    android:layout_toRightOf="@+id/textView8"
    	    android:ems="10" />
        
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
